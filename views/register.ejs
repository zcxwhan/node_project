		</footer>
	</body>
	<script src="javascripts/jquery.min.js"></script>
	<script>
		$(function(){

			$("#submit").on("click", register );

			function register(){
				var username = $("#username").val();
				var password = $("#password").val();

				var options = {
					url:"register/confirm",
					type:"post",
					data:{
						username:username,
						password:password
					}
				}
				$("#submit").html("提交中。。。请稍后");
				$.ajax(options)
				.then(function(res){
					console.log(res);
					if(res ==0){
						alert('服务器故障');
						$("#submit").html("立即注册");
					}else if(res==1){
						alert('用户名已存在');
						$("#submit").html("立即注册");
					}else{
						$("#submit").html("OK，即将跳转登录页");
						setTimeout(() => {
							location.href="/login";
						}, 2000);
						console.log(res);
					}
				
				})

			}

		})  
	</script>
</html>
